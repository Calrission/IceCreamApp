<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="26dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="85dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/geo_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.2"
            android:gravity="center|left"
            android:paddingRight="18dp"
            android:text="Loading..."
            android:textColor="@color/colorText"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/hide_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            app:srcCompat="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_backgound_time_delivery"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/time_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="18dp"
                android:text="Loading"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Delivery time"
                android:textColor="@color/colorHint" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Hope your order won't turn into a pumkin at midnight !\n(Just kidding!)"
            android:textColor="@color/colorText"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>